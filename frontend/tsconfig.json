{
	"compilerOptions": {
		"allowJs": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es2015",
			"dom"
		],
		"jsx": "react",
		"baseUrl": "./",
		"paths": {
			"app/*": [
				"./src/*"
			],
			"images/*": [
				"./src/assets/images/*"
			],
			"components/*": [
				"./src/components/*"
			]
		},
	},
	"include": [
		"src",
		"types",
	],
	"exclude": [
		"**/tests/**/*.(ts|tsx|js)",
		"**/*.test.(ts|tsx|js)",
		"./node_modules/**/*",
	],
}